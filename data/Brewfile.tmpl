{{ if (get . "install_core_cli") -}}
# ===== Core CLI Tools =====
brew "chezmoi"
brew "git"
brew "wget"
brew "curl"
brew "ripgrep"
brew "fd"
brew "fzf"
brew "bat"
brew "eza"
brew "jq"
brew "yq"
brew "git-delta"
brew "zoxide"
brew "starship"
brew "sheldon"
brew "neovim"
brew "lazygit"
brew "gh"
{{ end -}}

{{ if (get . "install_fonts") -}}
# ===== Fonts =====
cask "font-jetbrains-mono-nerd-font"
cask "font-fira-code-nerd-font"
{{ end -}}

{{ if (get . "install_security") -}}
# ===== Security Tools =====
brew "gnupg"
brew "yubikey-manager"
{{ if eq .chezmoi.os "darwin" -}}
brew "pinentry-mac"
{{ end -}}
brew "1password-cli"
brew "age"
{{ end -}}

{{ if and (get . "install_gui") (not (get . "headless")) -}}
# ===== GUI Applications =====
{{ if eq .chezmoi.os "darwin" -}}
cask "visual-studio-code"
cask "iterm2"
cask "google-chrome"
cask "1password"
{{ end -}}
{{ end -}}

{{ if (get . "install_mise") -}}
# ===== Development Runtimes =====
brew "mise"
{{ end -}}

{{ if (get . "install_maintenance") -}}
# ===== Maintenance Tools =====
brew "topgrade"
brew "restic"
{{ end -}}
